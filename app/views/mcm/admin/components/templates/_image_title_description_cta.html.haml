%h5 Image
= component_form.fields_for :assets, component_form.object.assets.first_or_initialize do |assets_form|
  = image_tag assets_form.object.attachment.variant(:square).processed.url if assets_form.object.persisted?
  = assets_form.file_field :attachment
%h5 Title
.row.my-3
  .col-12
    = f.text_field :title, required: true, help: 'Always centered'
  .col-12
    = f.select :title_color, available_button_colors, required: true
%h5 Content
.row.mb-3
  .col-12
    = f.text_area :content, requried: true
  .col-6
    = f.select :content_color, available_button_colors, required: true
  .col-6
    = f.select :content_alignment, text_alignments, required: true
%h5 Call To Action
.row.mb-3
  .col-6
    = f.text_field :cta
  .col-6
    = f.text_field :cta_url
  -# .col-6
  -#   = f.select :button_color, available_button_colors
  .col-6
    = f.select :button_alignment, text_alignments, required: true
